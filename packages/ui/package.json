{
  "name": "nidus",
  "version": "0.1.0",
  "description": "GUI for nidus",
  "main": "index.js",
  "private": true,
  "homepage": "http://nidus.gq",
  "scripts": {
    "test": "ava",
    "watch": "NODE_ENV=development rollup -wc lib/ui/rollup.config.js",
    "start": "electron .",
    "build": "NODE_ENV=production rollup -c lib/ui/rollup.config.js",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder"
  },
  "author": {
    "name": "Antony Jones",
    "email": "ant@nidus.gq"
  },
  "repository": "antony/nidus",
  "license": "MIT",
  "devDependencies": {
    "electron": "1.7.9",
    "electron-builder": "^19.48.2",
    "rollup": "^0.52.0",
    "rollup-plugin-babel": "^3.0.2",
    "rollup-plugin-commonjs": "^8.2.6",
    "rollup-plugin-copy": "^0.2.3",
    "rollup-plugin-livereload": "^0.6.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-postcss": "^0.5.5",
    "rollup-plugin-serve": "^0.4.2",
    "rollup-plugin-svelte": "^3.2.0",
    "rollup-plugin-uglify": "^2.0.1",
    "rollup-plugin-url": "^1.3.0",
    "spectre.css": "^0.4.7"
  },
  "build": {
    "appId": "nidus",
    "mac": {
      "category": "Productivity"
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "snap",
        "deb",
        "tar.bz2"
      ],
      "category": "Utility",
      "icon": "build"
    },
    "win": {
      "target": "NSIS",
      "icon": "build/icon.ico"
    }
  }
}

{
  "name": "nidus",
  "version": "0.1.0",
  "description": "GUI for nidus",
  "main": "index.js",
  "private": true,
  "homepage": "http://nidus.gq",
  "scripts": {
    "test": "ava",
    "watch": "NODE_ENV=development rollup -wc lib/ui/rollup.config.js",
    "start": "electron .",
    "build": "NODE_ENV=production rollup -c lib/ui/rollup.config.js",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --macos",
    "dist:linux": "npm run build && electron-builder --linux"
  },
  "author": {
    "name": "Antony Jones",
    "email": "ant@nidus.gq"
  },
  "repository": "antony/nidus",
  "license": "MIT",
  "build": {
    "appId": "nidus",
    "directories": {
      "buildResources": "build"
    },
    "files": [
      "src/**/*",
      "index.js",
      "build/**/*"
    ],
    "linux": {
      "target": [
        "deb"
      ],
      "category": "Utility",
      "icon": "build/assets"
    },
    "win": {
      "target": "NSIS",
      "icon": "build/icon.ico"
    },
    "mac": {
      "category": "Productivity",
      "target": [
        "dmg"
      ],
      "icon": "build/assets/icon.icns"
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  },
  "dependencies": {
    "nidus-core": "^0.1.0"
  }
}

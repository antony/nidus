{
  "name": "nidus",
  "version": "0.1.1",
  "description": "GUI for nidus",
  "main": "index.js",
  "private": true,
  "homepage": "http://nidus.gq",
  "scripts": {
    "test": "../../node_modules/.bin/ava",
    "watch": "NODE_ENV=development rollup -wc lib/ui/rollup.config.js",
    "start": "electron .",
    "build": "NODE_ENV=production rollup -c lib/ui/rollup.config.js",
    "dist": "npm run build && cp package.json build/ && electron-builder",
    "dist:pack": "npm run dist -- --dir",
    "dist:win": "npm run dist -- --win",
    "dist:mac": "npm run dist -- --macos",
    "dist:linux": "npm run dist -- --linux"
  },
  "author": {
    "name": "Antony Jones",
    "email": "ant@nidus.gq"
  },
  "repository": "antony/nidus",
  "license": "MIT",
  "build": {
    "appId": "nidus",
    "directories": {
      "buildResources": "build"
    },
    "files": [
      "src/**/*",
      "index.js",
      "build/**/*",
      "package.json"
    ],
    "linux": {
      "target": [
        "deb"
      ],
      "category": "Utility",
      "icon": "build/assets"
    },
    "win": {
      "target": "NSIS",
      "icon": "build/icon.ico"
    },
    "mac": {
      "category": "Productivity",
      "target": [
        "dmg"
      ],
      "icon": "build/assets/icon.icns"
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  },
  "dependencies": {
    "nidus-core": "^0.1.1"
  },
  "devDependencies": {
    "electron": "1.7.9",
    "electron-builder": "^19.48.2",
    "rollup": "^0.52.0",
    "rollup-plugin-babel": "^3.0.2",
    "rollup-plugin-commonjs": "^8.2.6",
    "rollup-plugin-copy": "^0.2.3",
    "rollup-plugin-livereload": "^0.6.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-postcss": "^0.5.5",
    "rollup-plugin-serve": "^0.4.2",
    "rollup-plugin-svelte": "^3.2.0",
    "rollup-plugin-uglify": "^2.0.1",
    "rollup-plugin-url": "^1.3.0",
    "spectre.css": "^0.4.7"
  }
}
